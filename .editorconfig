# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

# Matches Python files
[*.py]
indent_style = space
indent_size = 2

# Matches YAML files
[*.yaml]
indent_style = space
indent_size = 2
